{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["standard"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always", { "omitLastInOneLineBlock": true }]
    }
}
